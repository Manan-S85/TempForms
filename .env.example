# TempForms Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/tempforms

# MongoDB Atlas (replace with your connection string)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/tempforms

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# FRONTEND/BACKEND COMMUNICATION
# ===========================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:5000/api

# ===========================================
# APP CONFIGURATION
# ===========================================
VITE_APP_NAME=TempForms
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Temporary forms with auto-expiring functionality"

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Change this to a secure random string in production
JWT_SECRET=your-jwt-secret-change-in-production
BCRYPT_ROUNDS=10

# ===========================================
# RATE LIMITING
# ===========================================
MAX_FORMS_PER_HOUR=10
MAX_SUBMISSIONS_PER_5MIN=20
MAX_RESPONSE_VIEWS_PER_10MIN=50

# ===========================================
# DATABASE SETTINGS
# ===========================================
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT_CSV=true
VITE_ENABLE_EXPORT_JSON=true
VITE_ENABLE_PASSWORD_PROTECTION=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=info
LOG_LEVEL=info